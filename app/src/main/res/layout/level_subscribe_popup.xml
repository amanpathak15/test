<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/level_info_popup"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:paddingStart="15dp"
            android:paddingTop="20dp"
            android:paddingEnd="20dp"
            android:paddingBottom="15dp"
            android:src="@drawable/icon_delete"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/icon_question"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@id/cancel"
            android:layout_centerHorizontal="true"
            android:src="@drawable/icons_ask"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/level_purchase_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/icon_question"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            tools:ignore="RelativeOverlap"
            android:text="@string/you_have_not_purchase" />

        <TextView
            android:id="@+id/levels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_below="@id/level_purchase_title"
            android:layout_centerHorizontal="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:text="level 1" />

        <Button
            android:id="@+id/subscribe_now"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/levels"
            android:layout_marginTop="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_sign_in"
            android:text="@string/buy_now_popup"
            android:textColor="@android:color/white" />

    </RelativeLayout>


</LinearLayout>