<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayoutComment"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/postLatestCommentProfilePic"
        android:layout_marginStart="5dp"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <LinearLayout
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/postLatestCommentProfilePic"
        android:padding="10dp"
        android:background="@drawable/grey_background"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/postLatestCommentUserName"
            tools:text="Olga Todd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/latestComment"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            tools:text="Congratulations, Keep it up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>


</RelativeLayout>