<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp">

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        xmlns:tools="http://schemas.android.com/tools">


        <ImageView
            android:id="@+id/profilePic"
            android:scaleType="centerCrop"
            android:layout_marginStart="10dp"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_marginEnd="50dp"
            android:textSize="20sp"
            android:textColor="#4E5F63"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/profilePic"
            tools:text="Celia Marshall" />

        <TextView
            android:id="@+id/dateTime"
            android:text="12:30 pm"
            android:textSize="14sp"
            android:layout_marginStart="10dp"
            android:layout_below="@id/name"
            android:textColor="#B3B1B1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/profilePic" />

        <ImageView
            android:id="@+id/optionMenu"
            android:src="@drawable/ic_options"
            android:layout_marginEnd="2dp"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.borjabravo.readmoretextview.ReadMoreTextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profilePic"
            android:layout_margin="15dp"
            app:trimExpandedText="See More"
            app:trimCollapsedText="See Less"
            app:trimMode="trimModeLength"
            app:trimLength="175"
            android:textSize="16sp"
            android:visibility="gone"
            app:colorClickableText="#F3970A"
            />

        <!--<TextView
            android:id="@+id/text"
            android:textColor="@android:color/black"
            android:layout_marginTop="15dp"
            android:autoLink="all"
            android:layout_alignStart="@id/profilePic"
            android:textSize="20sp"
            android:textColorLink="@color/colorPrimary"
            android:layout_marginBottom="10dp"
            android:maxLines="3"
            android:ellipsize="end"
            android:visibility="gone"
            android:layout_below="@id/profilePic"
            android:layout_width="match_parent"
