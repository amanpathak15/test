            android:visibility="gone"
            android:textSize="24sp"
            android:layout_marginTop="15dp"
            android:textColor="#F3970A"
            android:layout_below="@id/profilePic"
            />-->

        <TextView
            android:id="@+id/likeCount"
            android:text="11 Likes"
            android:layout_below="@id/text"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:textColor="#4D5E62"
            android:layout_toStartOf="@id/commentCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/commentCount"
            android:text="11 Comments"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_below="@id/text"
            android:textColor="#4D5E62"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/buttons"
            android:layout_below="@id/commentCount"
            android:layout_marginLeft="-10dp"
            android:layout_marginRight="-10dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <LinearLayout
                android:id="@+id/like"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:background="@drawable/grey_stroke_white_background"
                android:gravity="center"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/likeIcon"
                    android:src="@drawable/like"
                    android:padding="11dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/comment"
                android:layout_weight="1"
                android:background="@drawable/grey_stroke_white_background"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/commentIcon"
                    android:src="@drawable/comment"
                    android:padding="11dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


            </LinearLayout>

        </LinearLayout>

        <include
            android:id="@+id/postLatestComment"
            android:layout_below="@id/buttons"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            layout="@layout/post_latest_comment"/>

        <include
            android:layout_below="@id/postLatestComment"
            layout="@layout/post_add_comment"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>