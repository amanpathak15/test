<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/free_card_view"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_margin="20dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="0dp"
        >

        <TextView
            android:id="@+id/types"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/textview_black_tablet"
            android:textColor="@android:color/white"
            android:paddingStart="25dp"
            android:paddingEnd="0dp"
            android:paddingTop="5dp"
            android:textSize="20sp"
            tools:text="Free" />

        <ImageView
            android:id="@+id/level_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:scaleType="centerCrop"
            android:paddingStart="20dp"
            android:paddingEnd="0dp"
            android:src="@drawable/info_icon" />


        <ImageView
            android:id="@+id/levelLogo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/types"
            android:layout_marginTop="30dp"
            android:scaleType="centerCrop" />


        <TextView
            android:id="@+id/levelTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:layout_below="@id/levelLogo"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="22sp"
            tools:text="Becoming Self Aware" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>

