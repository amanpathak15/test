<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape>
            <solid android:color="#EDF3FF" />

            <size android:height="40dp"/>

            <stroke
                android:dashGap="5dp"
                android:dashWidth="8dp"
                android:width="1dp"
                android:color="#FFC9CDD6" />

            <corners android:radius="5dp"/>

            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />
        </shape>
    </item>
</layer-list>